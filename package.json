{
  "name": "svelte-markdown",
  "description": "A markdown renderer for Svelte",
  "version": "0.3.0",
  "type": "module",
  "main": "dist/sveltemarkdown.js",
  "module": "dist/sveltemarkdown.es.js",
  "jsnext:main": "dist/sveltemarkdown.es.js",
  "svelte": "src/index.js",
  "files": [
    "dist",
    "src",
    "types"
  ],
  "license": "MIT",
  "author": "Pablo Berganza <pablo@berganza.dev>",
  "repository": "github:pablo-abc/svelte-markdown",
  "homepage": "https://github.com/pablo-abc/svelte-markdown",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest tests",
    "test:watch": "yarn test -- --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-commonjs": "23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.2.2",
    "babel-jest": "^29.3.1",
    "eslint": "^8.27.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.7.1",
    "rollup": "^3.3.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-svelte": "^7.1.0",
    "sirv-cli": "^2.0.2",
    "svelte": "^3.53.1",
    "svelte-jester": "^2.3.2"
  },
  "dependencies": {
    "@types/marked": "^4.0.7",
    "marked": "^4.2.2"
  },
  "peerDependencies": {
    "svelte": "^3.0.0"
  },
  "types": "./types/index.d.ts",
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "svelte-jester"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "moduleNameMapper": {
      "marked/lib/marked.esm.js": "marked"
    }
  }
}
